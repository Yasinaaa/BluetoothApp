                android:id="@+id/btn_reset_controller"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/btn_change_password"
                android:text="OK" />
                android:layout_below="@id/tv_reset"-->

            <TextView
                android:id="@+id/tv_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"

                android:text="Статус" />

            <!--  android:layout_below="@+id/tv_reset" -->
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="soft:09 01 \n27-06-17 08:55:10"
                android:layout_toRightOf="@+id/tv_version_title"
                android:layout_toEndOf="@+id/tv_version_title"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:layout_marginStart="17dp" />

            <!-- android:layout_below="@+id/tv_reset" -->
            <Button
                android:id="@+id/btn_sync_status"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="OK"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/tv_version_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_status"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="Версия"
                android:layout_marginStart="11dp" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_status"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:layout_toRightOf="@+id/tv_version_title"
                android:layout_toEndOf="@+id/tv_version_title"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:text="+VERSION:hc01.comV2.1" />

            <Button
                android:id="@+id/btn_sync_version"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="OK"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tv_status"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll1"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_below="@id/tv_version">
                <TextView
                    android:id="@+id/tv_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_version"
                    android:text="Дата"

                    android:layout_weight="5"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27-06-17"
                    android:layout_weight="5"
                    android:layout_below="@+id/tv_version" />

                <Button
                    android:id="@+id/btn_set_date"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="SET"
                    android:layout_weight="1"
                    android:layout_below="@+id/tv_version"
                    android:layout_toRightOf="@+id/tv_time"
                    android:layout_toEndOf="@+id/tv_time"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll2"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_below="@id/ll1">

                <TextView
                    android:id="@+id/tv_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll1"
                    android:layout_weight="5"
                    android:text="Время"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:55:10"
                    android:layout_toRightOf="@+id/tv_time_title"
                    android:layout_weight="5"
                    android:layout_below="@+id/ll1"
                    />

                <Button
                    android:id="@+id/btn_set_time"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="SET"
                    android:layout_toRightOf="@+id/tv_time"
                    android:layout_below="@+id/ll1"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/btn_sync_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Обновить "
                android:layout_below="@+id/ll2" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_schedule"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/cv_controller_functions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_schedule_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Расписание"
                android:layout_marginLeft="3dp"
                android:textSize="18sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_schedule_name"
                android:enabled="false"
                android:layout_below="@id/tv_schedule_title"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_edit_schedule"
                android:text="Посмотреть/Изменить"
                android:drawableLeft="@drawable/pen"
                android:layout_marginTop="10dp"
                android:drawablePadding="15dp"
                android:textSize="15sp"
                android:layout_below="@+id/et_schedule_name"
                 />

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id="@+id/btn_edit_schedule"
                android:text="OK"
                android:layout_below="@+id/et_schedule_name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_generate_schedule"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/tools"
                android:text="Сгенерировать\n расписание"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/tv_edit_schedule"
                />
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_generate_schedule"
                android:text="OK"
                android:visibility="gone"
                android:layout_below="@+id/btn_edit_schedule"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_new_schedule"
                android:text="Загрузить расписание"
                android:drawableLeft="@drawable/pdf"
                android:layout_marginTop="35dp"
                android:drawablePadding="15dp"
                android:textSize="15sp"
                android:layout_below="@+id/tv_generate_schedule" />

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id="@+id/btn_load_schedule"
                android:text="OK"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/btn_generate_schedule"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
</android.support.v4.widget.NestedScrollView >