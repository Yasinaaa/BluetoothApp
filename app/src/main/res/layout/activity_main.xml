<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_device_title"
        android:gravity="center"
        android:text="Runtime"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tb_mode_device"
        android:layout_alignEnd="@+id/tb_mode_device" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ib_change_name"
        android:background="@drawable/sync"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_device_title"
        />

    <Button
        android:id="@+id/btn_on_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btn_off_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:layout_below="@+id/btn_on_device"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


    <ToggleButton
        android:id="@+id/tb_mode_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/manual_mode"
        android:textOff="@string/auto_mode"
        android:showText="true"
        android:layout_below="@+id/tv_device_title"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_on_off_info"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/tb_mode_device"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_day"
                android:gravity="center_horizontal"
                android:text="Сегодня 01.08.2017"
                android:textSize="17dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_on"
                android:text="03:13"
                android:gravity="left"
                android:textSize="25dp"
                android:layout_below="@+id/tv_day"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_off"
                android:text="20:30"
                android:gravity="right"
                android:textSize="25dp"
                android:layout_below="@+id/tv_day"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_on_title"
                android:text="старт"
                android:gravity="left"
                android:textSize="16dp"
                android:layout_below="@+id/tv_on"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dash_day"
                android:text="----"
                android:gravity="center_horizontal"
                android:textSize="25dp"
                android:layout_below="@+id/tv_day"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_off_title"
                android:text="финиш"
                android:gravity="right"
                android:textSize="16dp"
                android:layout_below="@+id/tv_off"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_controller_functions"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/tb_mode_device"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Изменить пароль"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/pen"
                android:layout_alignParentTop="true"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_change_password"
                android:text="Сброс контроллера" />

            <Button
                android:id="@+id/btn_reset_controller"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_change_password"
                android:text="OK" />

            <TextView
                android:id="@+id/tv_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_reset"
                android:layout_alignStart="@+id/tv_reset"
                android:layout_below="@id/tv_reset"
                android:layout_marginTop="10dp"
                android:text="Статус" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="soft:09 01 \n27-06-17 08:55:10"
                android:layout_below="@+id/tv_reset"
                android:layout_toRightOf="@+id/tv_repeat_day"
                android:layout_toEndOf="@+id/tv_repeat_day"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="17dp" />

            <ImageButton
                android:id="@+id/ib_sync_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/btn_reset_controller"
                android:layout_alignStart="@+id/btn_reset_controller"
                android:layout_below="@+id/btn_reset_controller"
                android:layout_marginTop="10dp"
                android:background="@drawable/sync" />

            <TextView
                android:id="@+id/tv_repeat_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_status"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Версия" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_status"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_repeat_day"
                android:layout_toEndOf="@+id/tv_repeat_day"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:text="+VERSION:hc01.comV2.1" />

            <ImageButton
                android:id="@+id/ib_sync_version"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/sync"
                android:layout_above="@+id/btn_set_date"
                android:layout_alignLeft="@+id/btn_set_date"
                android:layout_alignStart="@+id/btn_set_date" />

            <TextView
                android:id="@+id/tv_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_repeat_day"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Дата" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_version"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_repeat_day"
                android:layout_toEndOf="@+id/tv_repeat_day"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:text="27-06-17 08:55:10" />

            <Button
                android:id="@+id/btn_set_date"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="SET"
                android:layout_below="@+id/tv_version"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_schedule"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/cv_on_off_info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_schedule_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Рассписание"
                android:layout_marginLeft="3dp"
                android:textSize="18sp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_schedule"
                android:text="schedule_file.pdf"
                android:textSize="15sp"
                android:layout_below="@id/tv_schedule_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/btn_remove_schedule"
                android:layout_toRightOf="@+id/et_schedule"
                android:layout_toEndOf="@+id/et_schedule"
                android:layout_alignBottom="@+id/et_schedule"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:background="@drawable/delete"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/tv_edit_schedule"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/pen"
                android:text="Посмотреть / Изменить"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/et_schedule"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_generate_schedule"
                android:text="Сгенерировать"
                android:drawableLeft="@drawable/tools"
                android:layout_marginTop="10dp"
                android:drawablePadding="15dp"
                android:textSize="15sp"
                android:layout_below="@+id/tv_edit_schedule" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_new_schedule"
                android:text="Скачать как pdf"
                android:drawableLeft="@drawable/pdf"
                android:layout_marginTop="10dp"
                android:drawablePadding="15dp"
                android:textSize="15sp"
                android:layout_below="@+id/tv_generate_schedule" />



        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>