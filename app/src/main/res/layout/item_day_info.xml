<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_on_off_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/tb_mode_device">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_day"
                android:gravity="center_horizontal"
                android:text="Сегодня 01.08.2017"
                android:textSize="17dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_on"
                android:text="03:13"
                android:gravity="left"
                android:textSize="25dp"
                android:layout_below="@+id/tv_day"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_off"
                android:text="20:30"
                android:gravity="right"
                android:textSize="25dp"
                android:layout_below="@+id/tv_day"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_on_title"
                android:text="вкл"
                android:gravity="left"
                android:textSize="16dp"
                android:layout_below="@+id/tv_on"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dash_day"
                android:text="----"
                android:gravity="center_horizontal"
                android:textSize="25dp"
                android:layout_below="@+id/tv_day"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_off_title"
                android:text="выкл"
                android:gravity="right"
                android:textSize="16dp"
                android:layout_below="@+id/tv_off"/>

        </RelativeLayout>


</android.support.v7.widget.CardView>
