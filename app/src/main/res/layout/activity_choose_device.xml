<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.android.bluetooth.start.ChooseDeviceActivity">

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_connect_with_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_bluetooth_connection"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textSize="20sp"/>

   <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_choose_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choose_device"
                android:gravity="center"
                android:textSize="25sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_devices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_choose_device"
                android:layout_marginTop="10dp">
            </android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/rv_devices"
                android:background="@drawable/btn_corner"
                android:padding="@dimen/btn_padding"
                android:textColor="@android:color/white"
                android:text="@string/connect" />

        </RelativeLayout>


    </ScrollView>
</RelativeLayout>
