    <TextView
        android:id="@+id/tv_repeat_begin_day_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:textSize="20sp"
        android:text="C"
        android:layout_below="@+id/til_repeat" />

    <TextView
        android:id="@+id/tv_repeat_begin_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_repeat"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_repeat_begin_day_title"
        android:layout_toEndOf="@+id/tv_repeat_begin_day_title"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:textSize="20sp"
        android:text="03.08.2017" />

    <ImageButton
        android:id="@+id/ib_set_begin_day"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/ic_lock_idle_alarm"
        android:layout_below="@id/til_repeat"
        android:layout_alignLeft="@+id/ib_change_sunset_time"
        android:layout_alignStart="@+id/ib_change_sunset_time"/>

    <TextView
        android:id="@+id/tv_repeat_end_day_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:textSize="20sp"
        android:text="До"
        android:layout_below="@+id/tv_repeat_begin_day_title" />

    <TextView
        android:id="@+id/tv_repeat_end_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_repeat_begin_day"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_repeat_end_day_title"
        android:layout_toEndOf="@+id/tv_repeat_end_day_title"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:textSize="20sp"
        android:text="30.08.2018" />

    <ImageButton
        android:id="@+id/ib_set_end_day"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@android:drawable/ic_lock_idle_alarm"

        android:layout_above="@+id/til_power"
        android:layout_alignLeft="@+id/ib_change_sunset_time"
        android:layout_alignStart="@+id/ib_change_sunset_time"/>

        android:layout_below="@+id/tv_repeat_end_day_title" >

<!--    android:layout_below="@+id/tv_repeat_day" -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_power"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_repeat_end_day"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/et_power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/power"
            android:imeActionLabel="@string/power"
            android:imeOptions="actionUnspecified"
            android:inputType="number"
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>

